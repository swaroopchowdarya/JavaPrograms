package myfirstprograms;

import java.util.Scanner;

public class SameSideByside {

    static void printSame(int arr[]) {
    	
        int count = 0;

        for(int i = 0; i < arr.length - 1; i++) {
        	
            if(arr[i] == arr[i+1]) {
            	
                count++;
                
            }
            
        }
        
        System.out.println("Total adjacent same elements: " + count);
    }
    

    public static void main(String[] args) {
    	
        Scanner sc = new Scanner(System.in);

        System.out.print("Enter array size: ");
        
        int n = sc.nextInt();

        int arr[] = new int[n];

        System.out.println("Enter array elements:");
        
        for(int i = 0; i < n; i++) {
        	
            arr[i] = sc.nextInt();
            
        }

        printSame(arr);

        sc.close();
        
    }
}
